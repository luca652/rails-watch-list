<div class="container text-center">

    <div>
   <div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(app/assets/images/chimp.jpeg)">
      <h1><%= @list.name %></h1>
    </div>

    <% @list.bookmarks.each do |bookmark| %>
      <div class="card-product">
        <img src="<%= bookmark.movie.poster_url %>" alt="poster">
        <div class="card-product-infos">
          <h2> <%= bookmark.movie.title %> </h2>
          <p> <%= bookmark.movie.overview %> </p>
        </div>
      </div>
    <% end %>

  <div>
    <%= link_to "Add a bookmark!", new_list_bookmark_path(@list), class:"btn btn-success"%>
  </div>
  <br>
  <div>
    <%= link_to "Get back to your lists!", lists_path, class:"btn btn-warning"%>
  </div>
</div>
