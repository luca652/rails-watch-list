<div class="container">
  <div class=list>
    <div>
      <h1><%= @list.name %></h1>
    </div>
    <% @list.bookmarks.each do |bookmark| %>
      <div class="card-product">
        <img src="<%= bookmark.movie.poster_url %>" alt="poster">
        <div class="card-product-infos">
          <h2> <%= bookmark.movie.title %> </h2>
          <p> <%= bookmark.movie.overview %> </p>
        </div>
      </div>
    <% end %>
  </div>

  <div>
    <%= link_to "Add a bookmark!", new_list_bookmark_path(@list), class:"btn btn-ghost"%>
  </div>
</div>
